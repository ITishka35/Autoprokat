<Page x:Class="Autoprokat.Pages.Administrator.Add_Cars"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Autoprokat.Pages.Administrator"
      mc:Ignorable="d"
      Title="Add_Cars" MinHeight="616" MinWidth="1100" Height="514" Width="1296">

    <Grid x:Name="Dobav" Margin="0,0,22,0">

        <Label x:Name="lbl_Marks" Content="Марка автомобиля" HorizontalAlignment="Left"  Margin="18,20,0,0" VerticalAlignment="Top" Height="26"/>
        <TextBox Width="197" Height="25" x:Name="txb_MarkAuto" Margin="176,21,0,434" Text="{Binding Path=Marks}" HorizontalAlignment="Left"/>
        <Label x:Name="lbl_Model" Content="Модель автомобиля" HorizontalAlignment="Left" Margin="18,52,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.79,-1.679" Height="28"/>
        <TextBox Height="24" Width="197" x:Name="txb_Model" Margin="176,56,0,0" VerticalAlignment="Top" Text="{Binding Path=Model}" HorizontalAlignment="Left"/>
        <Button Height="25" Click="All_Save_Click" Margin="109,374,0,0" HorizontalAlignment="Left" Width="86" VerticalAlignment="Top">Сохранить все</Button>
        <Button Content="Назад" Click="BackPage_Click" HorizontalAlignment="Left" Margin="18,374,0,0" VerticalAlignment="Top" Width="80" Height="25"/>
        <Label x:Name="lbl_Year" Content="Год выпуска" HorizontalAlignment="Left" Margin="18,94,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txb_Year" HorizontalAlignment="Left" Height="22" Margin="176,94,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="197" Text="{Binding Path=Year_Release}" />
        <Label x:Name="lbl_Color" Content="Цвет автомобиля" HorizontalAlignment="Left" Margin="18,134,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txb_Color" HorizontalAlignment="Left" Height="22" Margin="176,134,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="197" Text="{Binding Path=Color}" />
        <Button Height="24" Click="Delete_Click" Margin="207,374,0,0" Content="Удалить" HorizontalAlignment="Left" Width="86" VerticalAlignment="Top"/>
        <Button Height="25" Click="Edits_Item_Click" Margin="305,374,0,0" Content="Редактировать" HorizontalAlignment="Left" Width="87" VerticalAlignment="Top"/>
        <Label x:Name="lbl_Transmission" Content="Трансмиссия" HorizontalAlignment="Left"  Margin="18,164,0,0" VerticalAlignment="Top" Height="26"/>
        <TextBox Width="197" Height="25" x:Name="txb_Transmission" Margin="176,165,0,290" Text="{Binding Transmission}" HorizontalAlignment="Left"/>
        <Label x:Name="lbl_Eng_Volume" Content="Объем двигателя" HorizontalAlignment="Left" Margin="18,196,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.79,-1.679" Height="28"/>
        <TextBox Height="24" Width="197" x:Name="txb_Eng_Volume" Margin="176,200,0,0" VerticalAlignment="Top" Text="{Binding Engine_Volume}" HorizontalAlignment="Left"/>
        <Label x:Name="lbl_Depos_Amount" Content="Сумма залога" HorizontalAlignment="Left" Margin="18,238,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txb_Amount_Deposit" HorizontalAlignment="Left" Height="22" Margin="176,238,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="197" Text="{Binding Deposit_Amount}" />
        <Label x:Name="lbl_State_Num" Content="Госномер" HorizontalAlignment="Left" Margin="18,278,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txb_State_Number" HorizontalAlignment="Left" Height="22" Margin="176,278,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="197" Text="{Binding TypeCars.Type}" />
        <Label x:Name="lbl_TypeAuto" Content="Тип авто" HorizontalAlignment="Left" Margin="18,309,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txb_TypeAuto" HorizontalAlignment="Left" Height="22" Margin="176,313,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="197" Text="{Binding State_Number}" />

        <ListView x:Name="ListSpisok" ScrollViewer.HorizontalScrollBarVisibility ="Disabled" HorizontalContentAlignment="Center" Margin="408,1,0,64" d:ItemsSource="{d:SampleData ItemCount=4}" HorizontalAlignment="Left" Width="408">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" Height="395" Width="335"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid ScrollViewer.HorizontalScrollBarVisibility="Auto" Height="288" Width="322">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Image Width="50" Stretch="Fill" Margin="122,10,0,0" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" >
                            <Image.Source>
                                <Binding Path="imagePreview">
                                    <Binding.TargetNullValue>
                                        <Image Source="/Images/guokp.png" Margin="0,0,0,0" Width="50" />
                                    </Binding.TargetNullValue>
                                </Binding>
                            </Image.Source>
                        </Image>
                        <TextBlock Text="{Binding Marks}" TextAlignment="Center" TextWrapping="Wrap" Margin="5,10,0,0" FontSize="20" Grid.Row="0" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="157"/>
                        <Image Source="{Binding MainImagePath}" Height="70" Grid.Row="1" Margin="19,0,0,0" Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Left" Width="70"/>
                        <TextBlock Text="{Binding Model}" TextAlignment="Center" Width="126" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="184,10,0,0" FontSize="20" Grid.Row="0" Height="27" VerticalAlignment="Top"/>
                        <TextBlock Text="{Binding Year_Release }" Grid.Row="1" FontSize="14" Foreground="Green" Height="23" Margin="196,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="114"/>
                        <TextBlock Text="{Binding Transmission }" Grid.Row="1" FontSize="14" Foreground="Red"  Margin="196,0,0,0" Height="24" VerticalAlignment="Center" HorizontalAlignment="Left" Width="125"/>
                        <TextBlock Text="{Binding Engine_Volume,StringFormat= {}{0:N2} л.с}" Grid.Row="2" FontSize="14" Margin="11,0,0,25" HorizontalAlignment="Left" Width="139"/>
                        <TextBlock Text="{Binding Deposit_Amount, StringFormat={}{0:N2} руб}" Grid.Row="2" Margin="11,25,0,25" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Width="199"/>
                        <TextBlock Text="{Binding TypeCars.Type}" TextAlignment="Center" TextWrapping="Wrap" Margin="179,40,0,0" FontSize="20" Grid.Row="1" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="136"/>
                        <Button HorizontalAlignment="Left" x:Name="Edit" Click="Edit_Click" Width="200" Height="25" Content="Редактировать " VerticalAlignment="Center" Margin="0,0,0,60" Grid.Row="3" ></Button>
                        <Button HorizontalAlignment="Left" x:Name="Del" Click="Del_Click" Width="100" Height="25" Content="Удалить" VerticalAlignment="Center" Margin="0,10,0,0" Grid.Row="3" ></Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </Grid>
</Page>
