<Page x:Class="Autoprokat.Pages.Administrator.Add_Workers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Autoprokat.Pages.Administrator"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add_Workers">

    <Grid x:Name="Dobav">

        <Label Content="Наименование улсуги:" HorizontalAlignment="Left"  Margin="157,19,0,0" VerticalAlignment="Top" Height="26"/>
        <TextBox Width="280" Height="25" x:Name="Name" Margin="315,19,205,405" Text="{Binding Path=Name}"/>
        <Image x:Name="mainpage" Margin="10,19,704,342" Width="100" Height="100"/>
        <Button x:Name="ViboPict" Click="ViboPict_Click" Margin="59,335,491,0" Height="34" VerticalAlignment="Top" Width="250">Выбрать картинку</Button>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="157,89,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox  Height="23" Width="280" x:Name="Price" Margin="315,89,205,0" VerticalAlignment="Top" Text="{Binding Path=Price}"></TextBox>
        <Label Content="Время" HorizontalAlignment="Left" Margin="157,50,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.79,-1.679" Height="28"/>
        <TextBox Height="24" Width="280" x:Name="Time" Margin="315,54,205,0" VerticalAlignment="Top" Text="{Binding Path=Duration}"/>
        <Button Height="25" Width="100" Click="Button_Click" Margin="426,392,274,33">Сохранить все</Button>
        <Button Content="Назад" Click="Button_Click_1" HorizontalAlignment="Left" Margin="59,392,0,0" VerticalAlignment="Top" Width="80" Height="25"/>
        <Label Content="Действующая скидка" HorizontalAlignment="Left" Margin="157,124,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Sales" HorizontalAlignment="Left" Height="23" Margin="315,124,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="280" Text="{Binding Path=Sale}" />
        <Button x:Name="DopPict_Copy" Click="DopPict_Copy_Click" Margin="157,392,393,0" Height="25" VerticalAlignment="Top" Width="250" Content="Дополнительна картинка"/>

    </Grid>
</Page>
