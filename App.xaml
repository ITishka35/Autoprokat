<Application x:Class="Autoprokat.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Autoprokat"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="WrapPanel" x:Key="WrapPanelProgramm">
            <Setter Property="ItemWidth" Value="150"/>
            <Setter Property="ItemHeight" Value="30"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MaxWidth" Value="100"/>
            <Setter Property="Background" Value="#FFBBADAD"/>


        </Style>
    </Application.Resources> 
</Application>
